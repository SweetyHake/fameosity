<div class="fame-relations-content">
  <div class="fame-split-layout">
    {{> "relations/partials/navigator"}}
    <div class="fame-nav-resize-handle"></div>
    <div class="fame-detail-panel fame-global-drop-zone">
      {{#if detail}}
        {{#if (eq detail.entityType 'location')}}
          {{> "relations/partials/detail-location"}}
        {{/if}}
        {{#if (eq detail.entityType 'faction')}}
          {{> "relations/partials/detail-faction"}}
        {{/if}}
        {{#if (eq detail.entityType 'actor')}}
          {{> "relations/partials/detail-actor"}}
        {{/if}}
      {{else}}
        <div class="fame-detail-empty">
          <i class="fa-solid fa-hand-pointer"></i>
          <span>{{localize (concat moduleId '.ui.select-entity-hint')}}</span>
        </div>
      {{/if}}
    </div>
  </div>
</div>